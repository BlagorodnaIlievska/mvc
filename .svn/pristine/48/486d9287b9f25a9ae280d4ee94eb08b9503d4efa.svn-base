#login_form {
    background-color: #FFFFFF;
    background-image: -moz-linear-gradient(center top, #FFFFFF, #EEEEEE);
    border-radius: 3px 3px 3px 3px;

    padding: 30px;

    width: 500px;
}

#login_form h1 {
    text-shadow: 0 1px 0 rgba(255, 255, 255, .7), 0px 2px 0 rgba(0, 0, 0, .5);
    text-transform: uppercase;
    text-align: center;
    color: #666;
    margin: 0 0 30px 0;
    letter-spacing: 4px;
    font: normal 26px/1 Verdana, Helvetica;
    position: relative;
}

#login_form h1:after, #login_form h1:before {
    background-color: #777;
    content: "";
    height: 1px;
    position: absolute;
    top: 15px;
    width: 120px;
}

#login_form h1:after {
    background-image: -moz-linear-gradient(right center, #FFFFFF, #777777);
    right: 0;
}

#login_form h1:before {
    background-image: -webkit-gradient(linear, right top, left top, from(#777), to(#fff));
    background-image: -webkit-linear-gradient(right, #777, #fff);
    background-image: -moz-linear-gradient(right, #777, #fff);
    background-image: -ms-linear-gradient(right, #777, #fff);
    background-image: -o-linear-gradient(right, #777, #fff);
    background-image: linear-gradient(right, #777, #fff);
    left: 0;
}

#login_form input#username, #login_form input[type="password"] {
    background: url("../images/login-sprite.png") no-repeat scroll 5px 0 #F1F1F1;
    border: 1px solid #000;
    border-radius: 5px 5px 5px 5px;
    box-shadow: 0 1px 1px #CCCCCC inset, 0 1px 0 #FFFFFF;
    margin: 0 0 10px;
    padding: 15px 15px 15px 30px;
    width: 453px;
    font-family: 'Lucida Sans Unicode', Arial, Helvetica;

}

#login_form input[type="password"] {
    background-position: 5px -52px !important;
}

#login_form input[type="submit"]:hover {
    text-decoration: underline;
}