<script>
    jQuery(document).ready(function() {
        var data = {
            klientid: 0,
            tipid: 2
        }
        jQuery.ajax({
            url: "/index.php/materijalno/raporti/getFakturi",
            type: 'POST',
            data: data,
            dataType: 'json',
            success: function(response) {
                //console.log(response);
                jQuery(".rapfakturi").find("tr:gt(1)").remove();
                var tr = jQuery('.rapfakturi tr:last');
                tr.removeClass('hiderow');
                for ( var i = 0; i < response.length; i++ ) {
                    var newrow = jQuery(tr).clone().insertAfter(tr);
                    newrow.find('.datum').val(response[i].datum);
                    newrow.find('.klient').val(response[i].firmaIme);
                    newrow.find('.faktura').val(response[i].faktura);
                    newrow.find('.zabeleska').val(response[i].zabeleska);
                    newrow.find('.izlez').val(response[i].magacinska);
                    if(response[i].tipfaktura == 10)
                    {
                        newrow.find('.vleznafaktura').val(response[i].cenafaktura);
                        newrow.find('.priemnica').val(response[i].dokument);
                    }
                    if(response[i].tipfaktura == 20)
                    {
                        newrow.find('.izleznafaktura').val(response[i].cenafaktura);
                        newrow.find('.ispratnica').val(response[i].dokument);
                    }
                }
                tr.addClass('hiderow');
            }
        });
