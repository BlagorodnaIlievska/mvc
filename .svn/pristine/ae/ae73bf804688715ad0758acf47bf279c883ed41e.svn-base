                newrow.find('.brojb').html(response[i].broj_tender);
                newrow.find('.datumb').html(response[i].datum_tender);
                newrow.find('.baranjem').html(response[i].vid_postapka);
                newrow.find('.baranjep').html(response[i].broj_dogovor);

