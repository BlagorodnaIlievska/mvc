        var trow = jQuery(this).closest('tr');
        trow.remove();
        var i = 1;
        jQuery(targettabela+' tbody tr').each(function(){
            jQuery(this).find('.redenbroj').html(i);
            i = 1*i + 1;
        });
    });
}
