function addNewStavkaMaterijalno(targettabela){
    var redenbroj = jQuery('.internaispratnica tbody tr').length;
    if(redenbroj > 0) var newredenbroj = parseInt(redenbroj) + parseInt(1);
    else var newredenbroj = 1;
